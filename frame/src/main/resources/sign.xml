<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:context="http://www.springframework.org/schema/context"
       xmlns="http://www.springframework.org/schema/beans"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
       http://www.springframework.org/schema/beans/spring-beans-4.0.xsd
       http://www.springframework.org/schema/context
       http://www.springframework.org/schema/context/spring-context-4.0.xsd">
    <context:property-placeholder location="classpath:sign.properties" ignore-unresolvable="true" file-encoding="UTF-8"/>
    <bean name="signFilter" class="com.enjoygame.egapp.frame.web.filter.SignFilter">
        <property name="needCheckSign" value="${is.check.sign}"/>
        <property name="signPublicKey" value="${sign.public.key}"/>
        <property name="signBackDoor" value="${backdoor}"/>
        <property name="notNeedSignSet">
            <set>
                <value>/push/initiate</value>
            </set>
        </property>
    </bean>
    <bean name="md5SignFilter" class="com.enjoygame.egapp.frame.web.filter.Md5SignFilter">
        <property name="backDoor" value="jiangjiang"/>
        <property name="secretKey" value="${sign.inner.key}"/>
        <property name="switchOn" value="true"/>
        <property name="notNeedSignRegexs">
            <set>
                <value>.*/push_token/.*</value>
            </set>
        </property>
    </bean>
</beans>